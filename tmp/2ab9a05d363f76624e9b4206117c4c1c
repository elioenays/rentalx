CREATE TABLE "carro" (
  "id" integer PRIMARY KEY,
  "placa" int,
  "modelo" varchar
);

CREATE TABLE "locatario" (
  "id" integer PRIMARY KEY,
  "nome" varchar,
  "cnh" integer,
  "categoria_cnh" varchar
);

CREATE TABLE "locador" (
  "id" integer PRIMARY KEY,
  "nome" varchar
);

CREATE TABLE "contrato" (
  "id" integer PRIMARY KEY,
  "dt_retirada" date,
  "dt_devolucao" date
);

ALTER TABLE "carro" ADD FOREIGN KEY ("id") REFERENCES "locatario" ("id");

ALTER TABLE "contrato" ADD FOREIGN KEY ("id") REFERENCES "locatario" ("id");

ALTER TABLE "contrato" ADD FOREIGN KEY ("id") REFERENCES "locador" ("id");
